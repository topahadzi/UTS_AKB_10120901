<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/friend_view"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/gradient"
        android:layout_marginEnd="20dp"
        />
    <ImageView
        android:id="@+id/friend_img"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:src="@drawable/john"
        app:layout_constraintStart_toStartOf="@id/friend_view"
        app:layout_constraintTop_toTopOf="@id/friend_view"
        app:layout_constraintBottom_toBottomOf="@id/friend_view"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/friend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Johndy Panca"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/friend_img"
        app:layout_constraintStart_toEndOf="@id/friend_img"
        app:layout_constraintBottom_toBottomOf="@id/friend_img"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"/>
    <TextView
        android:id="@+id/friend_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IT Student"
        android:textSize="13dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/friend_title"
        app:layout_constraintStart_toStartOf="@id/friend_title" />
</androidx.constraintlayout.widget.ConstraintLayout>