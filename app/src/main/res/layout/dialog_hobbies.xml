<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="300dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
        <TextView
            android:id="@+id/hobbies_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Hobbies"
            android:elevation="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>
        <ImageView
            android:id="@+id/hobbies_img"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:src="@drawable/pop_1"
            android:elevation="20dp"
            app:layout_constraintTop_toBottomOf="@id/hobbies_title"
            app:layout_constraintStart_toStartOf="@id/hobbies_title"
            app:layout_constraintEnd_toEndOf="@id/hobbies_title" />
        <TextView
            android:id="@+id/hobbies_desc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/hobbies_img"
            app:layout_constraintEnd_toEndOf="@id/hobbies_img"
            app:layout_constraintTop_toBottomOf="@id/hobbies_img"
            android:text="Berenang"
            android:elevation="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/hobby_desc"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/hobbies_desc_title"
            app:layout_constraintEnd_toEndOf="@id/hobbies_desc_title"
            app:layout_constraintTop_toBottomOf="@id/hobbies_desc_title"
            android:text="Berenang sangat menyenangkan, saya bisa berenang seharian"
            android:textColor="@color/black"
            android:textAlignment="center"
            />
    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/hobby_desc"
        app:layout_constraintStart_toStartOf="@id/hobby_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/hobby_desc"
        android:background="@color/blue_1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
