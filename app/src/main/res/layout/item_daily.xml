<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/daily_view"
        android:layout_width="344dp"
        android:layout_height="100dp"
        android:background="@drawable/radius_home"
        android:backgroundTint="@color/blue_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        />
    <ImageView
        android:id="@+id/daily_img"
        android:layout_width="wrap_content"
        android:adjustViewBounds="true"
        android:layout_height="100dp"
        android:src="@drawable/coffee"
        android:elevation="20dp"
        app:layout_constraintStart_toStartOf="@id/daily_view"
        app:layout_constraintTop_toTopOf="@id/daily_view"
        app:layout_constraintBottom_toBottomOf="@id/daily_view"/>

    <TextView
        android:id="@+id/daily_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:text="Working"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/daily_view"
        app:layout_constraintStart_toEndOf="@id/daily_img"
        app:layout_constraintTop_toTopOf="@id/daily_img" />
    <TextView
        android:id="@+id/daily_desc"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Working as Devops Engineer from morning to evening"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/daily_title"
        app:layout_constraintEnd_toEndOf="@id/daily_title"
        app:layout_constraintTop_toBottomOf="@id/daily_title"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        />
</androidx.constraintlayout.widget.ConstraintLayout>