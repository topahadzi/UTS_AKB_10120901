<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="300dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:id="@+id/drink_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Favorite Drink"
        android:elevation="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/drink_img"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:src="@drawable/pop_4"
        android:elevation="20dp"
        app:layout_constraintTop_toBottomOf="@id/drink_title"
        app:layout_constraintStart_toStartOf="@id/drink_title"
        app:layout_constraintEnd_toEndOf="@id/drink_title" />
    <TextView
        android:id="@+id/drink_desc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/drink_img"
        app:layout_constraintEnd_toEndOf="@id/drink_img"
        app:layout_constraintTop_toBottomOf="@id/drink_img"
        android:text="Coffee"
        android:elevation="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/hobby_desc"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/drink_desc_title"
        app:layout_constraintEnd_toEndOf="@id/drink_desc_title"
        app:layout_constraintTop_toBottomOf="@id/drink_desc_title"
        android:text="Enjoying coffee while looking at nature is something that makes me enjoy"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/hobby_desc"
        app:layout_constraintStart_toStartOf="@id/hobby_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/hobby_desc"
        android:background="@color/blue_1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
